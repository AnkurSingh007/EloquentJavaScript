let size = 8;
for(let i = 1; i <= size ; i++){
  let pattern = '';
  if(i % 2 == 1){
    for(let j = 1; j <= size; j++){
      if(j % 2 == 1){
        pattern += ' ';
      }
      else{
        pattern += '#';
      }
    }
  }
  else{
    for(let k = 1; k <= size; k++){
      if(k % 2 == 1){
        pattern += '#';
      }
      else{
        pattern += ' ';
      }
    }
  }
  console.log(pattern);
}
